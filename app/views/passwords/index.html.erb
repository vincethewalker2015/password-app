<div class="center well">
    <h2 class="text-center white">All Password Details</h2>
    <h3 class="text-center white">User <%= current_user.name %> <%= " Admin User" if current_user.admin?%></h3>
</div>
<div class="row mt-2">
  <h2 class="text-center white">Look up Password</h2>
</div>
<div class="col-md-8 col-md-offset-3">
  <%= render "passwords/my_passwords" %>
</div>
<div class="col-md-8 col-md-offset-3">

  <div id="password-results"></div>

</div>

<div class="text-center">



    <div class="col-md-8 col-md-offset-2">
      <% @passwords.each do |pass| %>
        <div class="well profile-black-white-thin row" <%= cycle("profile-black-white-thin-b", '') %> 

              <p></p>    
							<p class="bold-white"><%= pass.name %></p>
              
							<%= link_to "View", password_path(pass), class: "btn btn-warning" %> 
							<% if current_user && current_user.admin? %>
									<%= link_to "Edit", edit_password_path(pass), class: "btn btn-primary" %>
									<%= link_to "Delete", password_path(pass), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-danger" %> 
							<% end %>
            
         </div>
      <% end %>
    </div>
</div>